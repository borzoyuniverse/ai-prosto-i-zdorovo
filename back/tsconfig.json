{
    "compilerOptions": {
      "target": "ES2021",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "outDir": "dist",
      "rootDir": ".",
      "types": ["node", "jest"]
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  